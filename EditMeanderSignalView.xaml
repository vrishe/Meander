<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:local="clr-namespace:Meander"
             xmlns:res="clr-namespace:Meander.Resources"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Meander.EditMeanderSignalView"
             x:DataType="local:EditMeanderSignalViewModel">
    <ContentView.Resources>
        <local:FormattedStringConverter x:Key="FormattedStringCVT"/>
        <DataTemplate x:Key="StepsDT"
                      x:DataType="local:LevelInputData">
            <HorizontalStackLayout Spacing="16">
                <Label Text="{Binding Number,Converter={StaticResource FormattedStringCVT},ConverterParameter={x:Static res:App.StepLevelFormat}}"
                       VerticalOptions="Center"/>
                <Entry HorizontalTextAlignment="End">
                    <Entry.Behaviors>
                        <local:FloatNumberInputBehaviour Value="{Binding Value}" />
                    </Entry.Behaviors>
                </Entry>
            </HorizontalStackLayout>
        </DataTemplate>
    </ContentView.Resources>
    <CollectionView
        ItemsSource="{Binding Steps}"
        ItemTemplate="{StaticResource StepsDT}"/>
</ContentView>
